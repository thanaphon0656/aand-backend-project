    "test": "jest --forceExit",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "deploy:prod": "npm run build && pm2 start ecosystem.config.js --only aand-api-prod",
    "deploy:dev": "npm run build && pm2 start ecosystem.config.js --only aand-api-dev"
  },
