{
  "name": "aand-api",
  "version": "1.0.0",
  "description": "TypeScript + Mongoose + MongoDB + Express API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/server.ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "npm run clean && NODE_OPTIONS='--max-old-space-size=4096' npx tsc",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' node dist/server.js",
    "deploy:prod": "npm run build && cross-env NODE_ENV=production pm2 restart aand-api || pm2 start dist/server.js --name aand-api"
  },
  "dependencies": {
    "aws-sdk": "^2.1205.0",
    "md5": "^2.3.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "envalid": "^7.1.0",
    "express": "^4.18.1",
    "helmet": "^6.1.3",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.7.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-recursive-directory": "^1.2.0",
    "routing-controllers": "^0.9.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "crypto-js": "^4.1.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/hpp": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}